<h1>My Blog</h1>

<% @blog_posts.each do |blog_post| %>
  <div>
  <h2>  <%= link_to blog_post.title ,blog_post_path(blog_post.id) %> </h2>
  <% if blog_post.draft? %>
  <div class="p-2 rounded bg-gray-300 text-gray-900">Draft</div>
  <% end %>
  <% if blog_post.published? %>
  <div class="p-2 rounded bg-red-200 text-gray-900">public</div>
  <% end %>
  <% if blog_post.scheduled? %>
  <div class="p-2 rounded bg-blue-200 text-gray-900">scheduled</div>
  <% end %>
    <%= blog_post.body %>
    </div>
    <% end %>
